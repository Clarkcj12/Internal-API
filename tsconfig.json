{
    "compilerOptions": {
        "outDir": "./build/",
        "baseUrl": "./",
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "lib": ["es2017"],
        "target": "es6",
        "sourceMap": true,
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "./index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}